<!DOCTYPE html>
<html lang="en">
<%- include ('./partials/head') %>

<body>
     <%- include ('./partials/nav' )%>

     <div class="blogs content">
          <h2> Blogs </h2>

          <%  if(blogs.length > 0){  %>
          <%   blogs.forEach(blog => {  %>
          <a class="single" href="/<%=blog._id%>">
               <h2 class='title'><%= blog.title %> </h2>
               <p class="snippets"><%= blog.snippet %></p>
          </a>
          <% }); %>
          <% } else { %>
          <p> No Blogs to display</p>
          <% }  %>

     </div>

     <%- include ('./partials/footer') %>
</body>

</html>